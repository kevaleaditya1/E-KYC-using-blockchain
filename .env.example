# Environment Configuration for eKYC Blockchain System
# Copy this file to .env and fill in your actual values

# Database Configuration (Required for Production)
DATABASE_URL="postgresql://username:password@localhost:5432/ekyc_database"

# Server Configuration
NODE_ENV=production
PORT=8080

# Blockchain Configuration (Optional - will use internal blockchain if not configured)
FABRIC_CONNECTION_PROFILE=""
FABRIC_WALLET_PATH="./wallet"
FABRIC_USER_ID="admin"
FABRIC_CHANNEL_NAME="ekyc-channel"
FABRIC_CHAINCODE_NAME="ekyc-chaincode"

# IPFS Configuration (Optional - will use mock service if not configured)
IPFS_API_URL="http://localhost:5001"
IPFS_GATEWAY_URL="http://localhost:8080/ipfs"

# Security Configuration
ADMIN_EMAIL="admin@ekyc.com"
ADMIN_PASSWORD="secure_admin_password"
JWT_SECRET="your-super-secure-jwt-secret-here"

# File Upload Configuration
MAX_FILE_SIZE=5242880
MAX_FILES_PER_UPLOAD=10
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/jpg,application/pdf"

# Blockchain Mining Configuration
MINING_DIFFICULTY=4
MINING_REWARD=100
GAS_PRICE=1
BLOCK_TIME=30000

# Monitoring and Analytics
ENABLE_ANALYTICS=true
LOG_LEVEL="info"